{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "[dbml]": {
    "editor.defaultFormatter": "aflalo.dbml-formatter"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "dbmlERDPreviewer.preferredTheme": "dark",
  "json.schemas": [
    {
      "fileMatch": ["collections/assets/**/*.json"],
      "url": "./collections/$schemas/assets.json"
    },
    {
      "fileMatch": ["collections/sections/**/*.json"],
      "url": "./collections/$schemas/sections.json"
    },
    {
      "fileMatch": ["collections/authors/**/*.json"],
      "url": "./collections/$schemas/authors.json"
    },
    {
      "fileMatch": ["collections/sources/**/*.json"],
      "url": "./collections/$schemas/sources.json"
    },
    {
      "fileMatch": ["collections/line-groups/**/*.json"],
      "url": "./collections/$schemas/line-groups.json"
    },
    {
      "fileMatch": ["collections/lines/**/*.json"],
      "url": "./collections/$schemas/lines.json"
    }
  ]
}
