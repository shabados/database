{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "common.json",
  "definitions": {
    "ScriptField": {
      "description": "Script field represented by ISO 15924 script code key-values",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Latn": { "type": "string" },
        "Guru": { "type": "string" },
        "Aran": { "type": "string" }
      }
    },
    "LanguageField": {
      "description": "Language field represented by ISO 639 language code key-values",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "en": { "type": "string" },
        "pa": { "type": "string" },
        "ar": { "type": "string" },
        "es": { "type": "string" },
        "fr": { "type": "string" },
        "de": { "type": "string" },
        "it": { "type": "string" },
        "ru": { "type": "string" }
      }
    }
  }
}
